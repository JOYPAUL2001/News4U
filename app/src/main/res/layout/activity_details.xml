<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"

        >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="12dp"
              >
              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:elevation="8dp"
                  app:cardCornerRadius="8dp"
                  app:cardBackgroundColor="#9CFFFFFF"
                  android:layout_margin="8dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="6dp">

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/text_detail_title"
                          android:textStyle="bold"
                          android:textColor="@color/black"
                          android:textSize="18sp">

                      </TextView>
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="220dp"
                          android:layout_marginTop="8dp"
                          android:src="@drawable/not_available"
                          android:scaleType="fitXY"
                          android:id="@+id/image_detail_news">
                          
                      </ImageView>
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/text_detail_author"
                          android:layout_marginTop="6dp"
                          android:fontFamily="@font/dm_sans"
                          android:textColor="@color/purple_700"
                          android:textSize="16sp"
                          >

                      </TextView>
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/text_detail_time"
                          android:textSize="16sp"
                          android:layout_marginTop="6dp"
                          android:fontFamily="@font/dm_sans"
                          android:textColor="@color/black"
                          >

                      </TextView>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <TextView
                  android:id="@+id/text_detail_detail"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="2dp"
                  android:textColor="@color/white"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  tools:ignore="WebViewLayout">

              </TextView>

              <TextView
                  android:id="@+id/text_detail_content"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="2dp"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  tools:ignore="WebViewLayout">

              </TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_view"
            android:id="@+id/bt_detail_webview"
            android:text="View more"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            >

        </Button>

          </LinearLayout>

    </ScrollView>

</LinearLayout>